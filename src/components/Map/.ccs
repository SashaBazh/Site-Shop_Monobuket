/* YandexMap.css */

.yandex-map-container {
  width: 100%;
  height: 400px; /* По умолчанию высота карты 400px */
}

@media (max-width: 768px) {
  .yandex-map-container {
    height: 300px; /* Для экранов с шириной до 768px (например, планшеты) */
  }
}

@media (max-width: 480px) {
  .yandex-map-container {
    height: 250px; /* Для мобильных устройств с шириной экрана до 480px */
  }
}
